@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewData["Title"] = "Tur Listesi";
}

<div class="body-wrapper">
    <div class="body-wrapper-inner">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title fw-semibold mb-0">Tur Listesi</h5>
                        <a href="/Destination/CreateDestination" class="btn btn-primary">
                            <i class="ti ti-plus"></i> Yeni Tur Ekle
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Görsel</th>
                                    <th>Şehir/Ülke</th>
                                    <th>Fiyat</th>
                                    <th>Süre</th>
                                    <th>Kapasite</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.CityCountry" style="width: 60px; height: 40px; object-fit: cover; border-radius: 5px;" />
                                                }
                                            </td>
                                            <td>@item.CityCountry</td>
                                            <td>@item.Price.ToString("N0") ₺</td>
                                            <td>@item.DayNight</td>
                                            <td>@item.Capacity kişi</td>
                                            <td>
                                                <a href="/Destination/UpdateDestination/@item.DestinationId" class="btn btn-sm btn-primary">
                                                    <i class="ti ti-edit"></i> Düzenle
                                                </a>
                                                <a href="/Destination/DeleteDestination/@item.DestinationId" class="btn btn-sm btn-danger" onclick="return confirm('Bu turu silmek istediğinize emin misiniz?')">
                                                    <i class="ti ti-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Henüz tur bulunmuyor</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
