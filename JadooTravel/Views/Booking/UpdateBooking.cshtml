@model JadooTravel.Dtos.BookingDtos.GetByIdBookingDto
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewData["Title"] = "Rezervasyon Güncelle";
}

<div class="body-wrapper">
    <div class="body-wrapper-inner">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Rezervasyon Güncelle</h5>
                    <form asp-action="UpdateBooking" method="post">
                        <input type="hidden" asp-for="BookingId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ad Soyad</label>
                                    <input type="text" class="form-control" asp-for="FullName" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">E-posta</label>
                                    <input type="email" class="form-control" asp-for="Email" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Telefon</label>
                                    <input type="text" class="form-control" asp-for="Phone" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tur Seçin</label>
                                    <select class="form-select" asp-for="DestinationId" asp-items="ViewBag.Destinations" required>
                                        <option value="">-- Tur Seçin --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Rezervasyon Tarihi</label>
                                    <input type="date" class="form-control" asp-for="BookingDate" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Kişi Sayısı</label>
                                    <input type="number" class="form-control" asp-for="NumberOfPeople" min="1" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Durum</label>
                                    <select class="form-select" asp-for="Status">
                                        <option value="Pending">Beklemede</option>
                                        <option value="Confirmed">Onaylandı</option>
                                        <option value="Cancelled">İptal Edildi</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Toplam Fiyat (₺)</label>
                            <input type="number" class="form-control" asp-for="TotalPrice" step="0.01" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-check"></i> Güncelle
                            </button>
                            <a href="/Booking/BookingList" class="btn btn-secondary">
                                <i class="ti ti-x"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
