@model List<JadooTravel.Dtos.BookingDtos.ResultBookingDto>
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewData["Title"] = "Rezervasyon Listesi";
}

<div class="body-wrapper">
    <div class="body-wrapper-inner">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title fw-semibold mb-0">Rezervasyon Listesi</h5>
                        <a href="/Booking/CreateBooking" class="btn btn-primary">
                            <i class="ti ti-plus"></i> Yeni Rezervasyon Ekle
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>E-posta</th>
                                    <th>Telefon</th>
                                    <th>Tur</th>
                                    <th>Tarih</th>
                                    <th>Kişi</th>
                                    <th>Toplam</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.FullName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.DestinationName</td>
                                            <td>@item.BookingDate.ToString("dd.MM.yyyy")</td>
                                            <td>@item.NumberOfPeople</td>
                                            <td>@item.TotalPrice.ToString("N0") ₺</td>
                                            <td>
                                                @if (item.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">Beklemede</span>
                                                }
                                                else if (item.Status == "Confirmed")
                                                {
                                                    <span class="badge bg-success">Onaylandı</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">İptal</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-sm btn-primary">
                                                    <i class="ti ti-edit"></i>
                                                </a>
                                                <a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-sm btn-danger" onclick="return confirm('Bu rezervasyonu silmek istediğinize emin misiniz?')">
                                                    <i class="ti ti-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted">Henüz rezervasyon bulunmuyor</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
