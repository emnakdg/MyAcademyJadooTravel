@model List<JadooTravel.Dtos.CategoryDtos.ResultCategoryDto>
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewData["Title"] = "Kategori Listesi";
}

<div class="body-wrapper">
    <div class="body-wrapper-inner">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title fw-semibold mb-0">Kategori Listesi</h5>
                        <a href="/Category/CreateCategory" class="btn btn-primary">
                            <i class="ti ti-plus"></i> Yeni Kategori Ekle
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CategoryId</td>
                                            <td>@item.CategoryName</td>
                                            <td>
                                                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-sm btn-primary">
                                                    <i class="ti ti-edit"></i> Düzenle
                                                </a>
                                                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-sm btn-danger" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">
                                                    <i class="ti ti-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">Henüz kategori bulunmuyor</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
