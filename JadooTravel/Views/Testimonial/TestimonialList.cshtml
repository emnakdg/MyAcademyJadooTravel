@model List<JadooTravel.Dtos.TestimonialDtos.ResultTestimonialDto>
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewData["Title"] = "Referans Listesi";
}

<div class="body-wrapper">
    <div class="body-wrapper-inner">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title fw-semibold mb-0">Referans Listesi</h5>
                        <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">
                            <i class="ti ti-plus"></i> Yeni Referans Ekle
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Fotoğraf</th>
                                    <th>Ad Soyad</th>
                                    <th>Şehir/Ülke</th>
                                    <th>Yorum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.NameSurname" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                                                }
                                            </td>
                                            <td><strong>@item.NameSurname</strong></td>
                                            <td>@item.CityCountry</td>
                                            <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@item.Comment</td>
                                            <td>
                                                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-primary">
                                                    <i class="ti ti-edit"></i>
                                                </a>
                                                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-danger" onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?')">
                                                    <i class="ti ti-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Henüz referans bulunmuyor</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
