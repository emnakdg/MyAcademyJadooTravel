@model List<JadooTravel.Dtos.TestimonialDtos.ResultTestimonialDto>
@using Microsoft.AspNetCore.Localization
@*
    Testimonials Component Partial View - Dynamic Data with Localization
*@

@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture.Culture.Name ?? "tr-TR";
    
    var texts = new Dictionary<string, Dictionary<string, string>>
    {
        { "tr-TR", new Dictionary<string, string> {
            { "Testimonials", "Referanslar" },
            { "WhatPeopleSay", "İnsanlar Hakkımızda Ne Diyor" }
        }},
        { "en-US", new Dictionary<string, string> {
            { "Testimonials", "Testimonials" },
            { "WhatPeopleSay", "What People Say About Us" }
        }},
        { "fr-FR", new Dictionary<string, string> {
            { "Testimonials", "Témoignages" },
            { "WhatPeopleSay", "Ce que les Gens Disent de Nous" }
        }},
        { "de-DE", new Dictionary<string, string> {
            { "Testimonials", "Referenzen" },
            { "WhatPeopleSay", "Was die Leute Über Uns Sagen" }
        }}
    };
    
    var t = texts.ContainsKey(currentCulture) ? texts[currentCulture] : texts["tr-TR"];
}

<section id="testimonial">

    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="mb-8 text-start">
                    <h5 class="text-secondary">@t["Testimonials"]</h5>
                    <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">@t["WhatPeopleSay"]</h3>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-6">
                <div class="pe-7 ps-5 ps-lg-0">
                    <div class="carousel slide carousel-fade position-static" id="testimonialIndicator" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            @if (Model != null && Model.Any())
                            {
                                @for (int i = 0; i < Model.Count && i < 5; i++)
                                {
                                    <button class="@(i == 0 ? "active" : "")" type="button" data-bs-target="#testimonialIndicator" data-bs-slide-to="@i" aria-current="true" aria-label="Testimonial @i"></button>
                                }
                            }
                            else
                            {
                                <button class="active" type="button" data-bs-target="#testimonialIndicator" data-bs-slide-to="0" aria-current="true" aria-label="Testimonial 0"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @if (Model != null && Model.Any())
                            {
                                var index = 0;
                                @foreach (var item in Model.Take(5))
                                {
                                    <div class="carousel-item position-relative @(index == 0 ? "active" : "")">
                                        <div class="card shadow" style="border-radius:10px;">
                                            <div class="position-absolute start-0 top-0 translate-middle">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img class="rounded-circle fit-cover" src="@item.ImageUrl" height="65" width="65" alt="@item.NameSurname" />
                                                }
                                                else
                                                {
                                                    <img class="rounded-circle fit-cover" src="/public/assets/img/testimonial/author.png" height="65" width="65" alt="" />
                                                }
                                            </div>
                                            <div class="card-body p-4">
                                                <p class="fw-medium mb-4">&quot;@item.Comment&quot;</p>
                                                <h5 class="text-secondary">@item.NameSurname</h5>
                                                <p class="fw-medium fs--1 mb-0">@item.CityCountry</p>
                                            </div>
                                        </div>
                                        <div class="card shadow-sm position-absolute top-0 z-index--1 mb-3 w-100 h-100" style="border-radius:10px;transform:translate(25px, 25px)"> </div>
                                    </div>
                                    index++;
                                }
                            }
                            else
                            {
                                <!-- Fallback static content -->
                                <div class="carousel-item position-relative active">
                                    <div class="card shadow" style="border-radius:10px;">
                                        <div class="position-absolute start-0 top-0 translate-middle"> <img class="rounded-circle fit-cover" src="/public/assets/img/testimonial/author.png" height="65" width="65" alt="" /></div>
                                        <div class="card-body p-4">
                                            <p class="fw-medium mb-4">&quot;Harika bir seyahat deneyimi yaşadık. Her şey mükemmeldi!&quot;</p>
                                            <h5 class="text-secondary">Ahmet Yılmaz</h5>
                                            <p class="fw-medium fs--1 mb-0">İstanbul, Türkiye</p>
                                        </div>
                                    </div>
                                    <div class="card shadow-sm position-absolute top-0 z-index--1 mb-3 w-100 h-100" style="border-radius:10px;transform:translate(25px, 25px)"> </div>
                                </div>
                            }
                        </div>
                        <div class="carousel-navigation d-flex flex-column flex-between-center position-absolute end-0 top-lg-50 bottom-0 translate-middle-y z-index-1 me-3 me-lg-0" style="height:60px;width:20px;">
                            <button class="carousel-control-prev position-static" type="button" data-bs-target="#testimonialIndicator" data-bs-slide="prev"><img src="/public/assets/img/icons/up.svg" width="16" alt="icon" /></button>
                            <button class="carousel-control-next position-static" type="button" data-bs-target="#testimonialIndicator" data-bs-slide="next"><img src="/public/assets/img/icons/down.svg" width="16" alt="icon" /></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- end of .container-->

</section>