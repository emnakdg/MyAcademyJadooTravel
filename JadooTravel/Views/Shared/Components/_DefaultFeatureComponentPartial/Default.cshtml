@model JadooTravel.Dtos.FeatureDtos.ResultFeatureDto
@using Microsoft.AspNetCore.Localization
@*
    Feature Component Partial View - Dynamic Data with Localization
*@

@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture.Culture.Name ?? "tr-TR";
    
    var texts = new Dictionary<string, Dictionary<string, string>>
    {
        { "tr-TR", new Dictionary<string, string> {
            { "BestRoutes", "Dünyanın En İyi Rotaları" },
            { "HeroTitle", "Seyahat Et, Keyfini Çıkar ve Yeni Bir Hayat Yaşa" },
            { "HeroDesc", "Dakikalar içinde seyahatinizi planlayın, çok daha uzun süre kontrolü elinizde tutun." },
            { "FindOutMore", "Daha Fazla Bilgi" },
            { "PlayDemo", "Demo İzle" }
        }},
        { "en-US", new Dictionary<string, string> {
            { "BestRoutes", "Best Routes in the World" },
            { "HeroTitle", "Travel, Enjoy and Live a New and Full Life" },
            { "HeroDesc", "Plan your trip in minutes, stay in control for much longer." },
            { "FindOutMore", "Find Out More" },
            { "PlayDemo", "Play Demo" }
        }},
        { "fr-FR", new Dictionary<string, string> {
            { "BestRoutes", "Les Meilleurs Itinéraires du Monde" },
            { "HeroTitle", "Voyagez, Profitez et Vivez une Nouvelle Vie" },
            { "HeroDesc", "Planifiez votre voyage en quelques minutes, gardez le contrôle plus longtemps." },
            { "FindOutMore", "En Savoir Plus" },
            { "PlayDemo", "Voir la Démo" }
        }},
        { "de-DE", new Dictionary<string, string> {
            { "BestRoutes", "Die Besten Routen der Welt" },
            { "HeroTitle", "Reisen, Genießen und ein Neues Leben Leben" },
            { "HeroDesc", "Planen Sie Ihre Reise in Minuten, behalten Sie viel länger die Kontrolle." },
            { "FindOutMore", "Mehr Erfahren" },
            { "PlayDemo", "Demo Ansehen" }
        }}
    };
    
    var t = texts.ContainsKey(currentCulture) ? texts[currentCulture] : texts["tr-TR"];
}

<section style="padding-top: 7rem;">
    <div class="bg-holder" style="background-image:url(/public/assets/img/hero/hero-bg.svg);">
    </div>
    <!--/.bg-holder-->

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 col-lg-6 order-0 order-md-1 text-end"><img class="pt-7 pt-md-0 hero-img" src="/public/assets/img/hero/hero-img.png" alt="hero-header" /></div>
            <div class="col-md-7 col-lg-6 text-md-start text-center py-6">

                @if (Model != null)
                {
                    <h4 class="fw-bold text-danger mb-3">@Model.Title</h4>
                    <h1 class="hero-title">@Model.MainTitle</h1>
                    <p class="mb-4 fw-medium">@Model.Description</p>
                }
                else
                {
                    <h4 class="fw-bold text-danger mb-3">@t["BestRoutes"]</h4>
                    <h1 class="hero-title">@t["HeroTitle"]</h1>
                    <p class="mb-4 fw-medium">@t["HeroDesc"]</p>
                }

                <div class="text-center text-md-start">

                    <a class="btn btn-primary btn-lg me-md-4 mb-3 mb-md-0 border-0 primary-btn-shadow" href="#!" role="button">@t["FindOutMore"]</a>

                    <div class="w-100 d-block d-md-none"></div><a href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo"><span class="btn btn-danger round-btn-lg rounded-circle me-3 danger-btn-shadow"> <img src="/public/assets/img/hero/play.svg" width="15" alt="play" /></span></a><span class="fw-medium">@t["PlayDemo"]</span>

                    <div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                @if (Model != null && !string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <iframe class="rounded" style="width:100%;max-height:500px;" height="500px" src="@Model.VideoUrl" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                                }
                                else
                                {
                                    <iframe class="rounded" style="width:100%;max-height:500px;" height="500px" src="https://www.youtube.com/embed/_lhdhL4UDIo" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
