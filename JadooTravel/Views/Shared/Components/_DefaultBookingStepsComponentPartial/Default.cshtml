        { "en-US", new Dictionary<string, string> {
            { "EasyFast", "Easy and Fast Booking" },
            { "ThreeSteps", "Book Your Trip in 3 Steps" },
            { "Step1Title", "Choose Destination" },
            { "Step1Desc", "Choose your favourite place. No matter where you travel inside the World." },
            { "Step2Title", "Make Payment" },
